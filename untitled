  <!-- Google Map -->
  <script>
    function initMap() {
      var sgb_location = {lat: 4.813266, lng: 114.858343};
      var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 15,
        scrollwheel: false,
        center: sgb_location
        
      });


      var marker = new google.maps.Marker({
      
        position: sgb_location,
        map: map,
        icon: 'Image/sgb-75x40.png',
        url: 'https://goo.gl/maps/h2TwRUUauNQ2'
      });

      marker.addListener('click', function()

      {
        window.open(this.url, "_blank");
      });

      
      }

      


    


  </script>
  <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBOi9WEcj0Jv1E3Eu46lwwiPOrzNwqZwPg&callback=initMap"></script>

